{
  "name": "ceiled-server",
  "version": "2.0.0",
  "description": "TypeScript NodeJS WebSocket server for displaying patterns on LED devices connected through ceiled-driver.",
  "main": "src/server.ts",
  "typings": "src/typings.d.ts",
  "author": "Bart van Oort",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bvobart/ceiLED/issues"
  },
  "homepage": "https://github.com/bvobart/ceiLED#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvobart/ceiLED.git"
  },
  "scripts": {
    "start": "INSECURE=true nodemon --watch src -e ts,tsx --exec ts-node ./src/server.ts",
    "build": "tsc",
    "serve": "nodemon build/server.js",
    "test": "TEST=true jest --coverage --detectOpenHandles --forceExit",
    "addUser": "node ./src/auth/scripts/addToken.js"
  },
  "dependencies": {
    "bluebird": "3.5.5",
    "duration": "0.2.2",
    "mongodb": "3.3.0",
    "typescript": "3.5.3",
    "ws": "7.1.2"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.27",
    "@types/bluebird-global": "3.5.12",
    "@types/jest": "24.0.18",
    "@types/mongodb": "3.3.0",
    "@types/node": "10.12.18",
    "@types/ws": "6.0.3",
    "husky": "2.3.0",
    "jest": "24.9.0",
    "lint-staged": "8.1.7",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.19.0",
    "tslint-config-prettier": "1.18.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
