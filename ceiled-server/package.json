{
  "name": "ceiled-server",
  "version": "3.0.0-beta",
  "description": "TypeScript NodeJS WebSocket server for displaying patterns on LED devices connected through ceiled-driver.",
  "main": "src/server.ts",
  "engines": {
    "node": "~12"
  },
  "typings": "src/typings.d.ts",
  "author": "Bart van Oort",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bvobart/ceiLED/issues"
  },
  "homepage": "https://github.com/bvobart/ceiLED#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvobart/ceiLED.git"
  },
  "scripts": {
    "start": "INSECURE=true nodemon --watch src -e ts,tsx --exec ts-node ./src/server.ts",
    "build": "tsc",
    "serve": "nodemon build/server.js",
    "test": "TEST=true jest --coverage --detectOpenHandles --forceExit",
    "addUser": "node ./src/auth/scripts/addToken.js"
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "duration": "0.2.2",
    "mongodb": "3.6.3",
    "prompts": "^2.4.0",
    "socket.io": "2.3.0",
    "typescript": "4.0.5"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.33",
    "@types/bluebird-global": "3.5.12",
    "@types/jest": "26.0.15",
    "@types/mongodb": "3.5.33",
    "@types/node": "12.12.5",
    "@types/prompts": "2.0.9",
    "@types/socket.io": "2.1.11",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "8.1.7",
    "nodemon": "2.0.6",
    "prettier": "2.1.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
