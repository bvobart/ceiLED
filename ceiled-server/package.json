{
  "name": "ceiled-server",
  "version": "3.0.0-beta",
  "description": "TypeScript NodeJS WebSocket server for displaying patterns on LED devices connected through ceiled-driver.",
  "main": "src/server.ts",
  "engines": {
    "node": ">=16"
  },
  "typings": "src/typings.d.ts",
  "author": "Bart van Oort",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bvobart/ceiLED/issues"
  },
  "homepage": "https://github.com/bvobart/ceiLED#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvobart/ceiLED.git"
  },
  "scripts": {
    "start": "INSECURE=true nodemon --watch src -e ts,tsx --exec ts-node ./src/server.ts",
    "build": "tsc",
    "lint": "eslint src",
    "serve": "nodemon build/server.js",
    "test": "TEST=true jest --coverage --detectOpenHandles --forceExit",
    "addUser": "node ./src/auth/scripts/addToken.js",
    "auth:add": "ts-node ./src/scripts/auth/add.ts",
    "auth:list": "ts-node ./src/scripts/auth/list.ts",
    "auth:remove": "ts-node ./src/scripts/auth/remove.ts"
  },
  "dependencies": {
    "duration": "0.2.2",
    "mongodb": "3.6.3",
    "prompts": "2.4.2",
    "socket.io": "2.3.0",
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "@types/jest": "26.0.15",
    "@types/mongodb": "3.5.33",
    "@types/node": "16.11.7",
    "@types/prompts": "2.0.14",
    "@types/socket.io": "2.1.11",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "26.6.3",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "26.4.4",
    "ts-node": "10.4.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
