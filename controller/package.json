{
  "name": "controller",
  "version": "1.0.0",
  "description": "TypeScript NodeJS controller and WebSocket server for the LEDs connected to the GPIO pins.",
  "main": "src/server.js",
  "author": "Bart van Oort",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bvobart/ceiLED/issues"
  },
  "homepage": "https://github.com/bvobart/ceiLED#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvobart/ceiLED.git"
  },
  "scripts": {
    "start": "INSECURE=true nodemon --watch src -e ts,tsx --exec ts-node ./src/server.ts",
    "build": "tsc",
    "serve": "nodemon build/server.js",
    "test": "TEST=true jest --coverage --detectOpenHandles --forceExit",
    "addUser": "node ./src/auth/scripts/addToken.js"
  },
  "dependencies": {
    "bluebird": "3.5.4",
    "chalk": "2.4.2",
    "i2c-bus": "4.0.9",
    "mongodb": "3.2.5",
    "pca9685": "4.0.3",
    "typescript": "3.4.5",
    "ws": "7.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.26",
    "@types/bluebird-global": "3.5.11",
    "@types/i2c-bus": "1.0.22",
    "@types/jest": "24.0.13",
    "@types/mongodb": "3.1.27",
    "@types/node": "10.12.18",
    "@types/ws": "6.0.1",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.7",
    "nodemon": "1.19.0",
    "prettier": "1.17.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
