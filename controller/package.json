{
  "name": "controller",
  "version": "0.1.0",
  "description": "TypeScript NodeJS controller and WebSocket server for the LEDs connected to the GPIO pins.",
  "main": "src/server.js",
  "author": "Bart van Oort",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bvobart/ceiLED/issues"
  },
  "homepage": "https://github.com/bvobart/ceiLED#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvobart/ceiLED.git"
  },
  "scripts": {
    "start": "nodemon --watch src -e ts,tsx --exec ts-node ./src/server.ts",
    "build": "tsc",
    "serve": "nodemon build/server.js",
    "test": "jest --coverage"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.4.1",
    "i2c-bus": "^4.0.1",
    "pca9685": "^4.0.3",
    "typescript": "^2.9.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/bluebird-global": "^3.5.6",
    "@types/i2c-bus": "^1.0.18",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.4",
    "@types/ws": "^5.1.2",
    "jest": "^23.4.2",
    "nodemon": "^1.18.3",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "../tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
